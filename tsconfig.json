{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "module": "esnext",
    "esModuleInterop": true,
    "target": "es5",
    "lib": [
      "es6",
      "dom"
    ],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "incremental": true,
    "types": [
      "react",
      "react-dom",
      "styled-components",
      "enzyme",
      "enzyme-adapter-react-16",
      "enzyme-to-json",
      "jest"
    ]
  },
  "exclude": [
    "node_modules",
    "backend",
    "config",
    "dist",
    "build",
    "coverage",
    "__tests__",
    "jest.config.js",
    "src/hot-reload.js",
    "publish_to_webstore.js"
  ]
}
