{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier",
    "tslint-react-hooks"
  ],
  "linterOptions": {
    "exclude": [
      "webpack.config.dev.js",
      "config/**/*.js",
      "./node_modules/**",
      "coverage/lcov-report/*.js"
    ]
  },
  "rules": {
    "no-shadowed-variable": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "interface-over-type-literal": false,
    "no-console": false,
    "semicolon": [
      true,
      "never"
    ],
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "type-literal-delimiter": [
      false
    ],
    "trailing-comma": false
  },
  "jsRules": {
    "object-literal-sort-keys": false,
    "semicolon": [
      true,
      "never"
    ],
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ]
  }
}
